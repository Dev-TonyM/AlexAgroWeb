<%- include('../header.ejs') %>
<link rel="stylesheet" href="/css/login.css">
<main id="main">
    <div id="fondo">
        <form method="post" action="/login" class="formu">
            <div class="container">
                <% if (error !=null) { %>
                    <p style="color: red;"><%= error %></p>
                <% } %>
                <label for="user"><b>Usuario</b></label>
                <input type="text" placeholder="Usuario" id="user" name="user" required>
                <label for="pass"><b>Contraseña</b></label>
                <input type="password" placeholder="Contraseña" id="pass" name="pass" required>
                <button type="submit" class="button-login">Login</button>
                <span aling="right">
                    <a href="/registro" class="button-register">Registrarse </a>
                </span>
            </div>
            <div class="space"></div>
        </form>
    </div>
</main>
<%- include('../footer.ejs') %>
